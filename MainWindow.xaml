<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" 
        x:Class="SoftwareEng.MainWindow"
    
        xmlns:SoftwareEngControls="clr-namespace:SoftwareEng"
    
        Title="MainWindow" Height="350" Width="525" Opacity="0.7" Background="#FF272727" BorderBrush="#FFC3C3C3" WindowStyle="ThreeDBorderWindow" ScrollViewer.VerticalScrollBarVisibility="Disabled">


    <Grid MouseRightButtonDown="Grid_MouseRightButtonDown_1">
        <Popup x:Name="mainWindowContextMenu" Placement="MousePoint" AllowsTransparency="True" PopupAnimation="Fade" LostMouseCapture="mainWindowContextMenu_LostMouseCapture">
            <SoftwareEngControls:customRadialPanel x:Name="menuRadialPanelElement" InnerRadius="30" OuterRadius="60" BackgroundColor="#4DFFFFFF" StartAngle="30" Angle="270" BorderColor="GhostWhite" BackgroundOpacity="1" ShowPieLines="False" ShowBorder="False">
                <Button x:Name="addMenuItemButton" Width="25" Height="25" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Image x:Name="addButtonImage" Source="Images\112_Plus_Grey_48x48_72.png" Stretch="Fill"/>
                </Button>
                <Button x:Name="copyMenuItemButton" Width="25" Height="25" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Image x:Name="copyButtonImage" Source="Images\112_RightArrowLong_Grey_48x48_72.png" Stretch="Fill"/>
                </Button>
                <Button x:Name="deleteMenuItemButton" Width="25" Height="25" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Image x:Name="deleteButtonImage" Source="Images\delete.png" Stretch="Fill"/>
                </Button>
                <Button x:Name="renameMenuItemButton" Width="25" Height="25" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Image x:Name="renameButtonImage" Source="Images\1462_Pencil_48x48.png" Stretch="Fill"/>
                </Button>
                <Button x:Name="slideshowMenuItemButton" Width="25" Height="25" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Image x:Name="slideshowButtonImage" Source="Images\Move.png" Stretch="Fill"/>
                </Button>
                <Button x:Name="viewMenuItemButton" Width="25" Height="25" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Image x:Name="viewButtonImage" Source="Images\view.png" Stretch="Fill"/>
                </Button>
            </SoftwareEngControls:customRadialPanel>
        </Popup>
        
        <SoftwareEngControls:AlbumList x:Name="mainWindowAlbumList" Background="#FF404040" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <Rectangle x:Name="dockHitBox" Fill="#00F4F4F5" Height="20" Margin="25,0" Stroke="#00000000" VerticalAlignment="Bottom" MouseEnter="dockHitBox_MouseEnter"/>
        <DockPanel x:Name="mainWindowDock" LastChildFill="False" Margin="25,0" RenderTransformOrigin="0.5,0.5" MouseLeave="mainWindowDock_MouseLeave" Height="70" VerticalAlignment="Bottom">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#C7000000" Offset="1"/>
                    <GradientStop Color="#C7383838"/>
                    <GradientStop Color="#C7A7A7A7" Offset="0.581" />
                    <GradientStop Color="#C7A7A7A7" Offset="0.372" />
                </LinearGradientBrush>
            </DockPanel.Background>
            <Button x:Name="libraryDockButton" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <Image x:Name="libraryDockButtonImage" Source="Images\112_UpArrowLong_Grey_48x48_72.png" Stretch="None"/>
                <Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#BD767676" Offset="0.698" />
                        <GradientStop Color="#00C4C4C4" Offset="1" />
                        <GradientStop Color="#AAFFFFFF" Offset="0.39" />
                        <GradientStop Color="#B5000000" Offset="0.855" />
                    </RadialGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="clipBoardDockButton" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <Image x:Name="clipboardDockButtonImage" Source="Images\1435_ClipBoard.png" Stretch="None"/>
                <Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#BD767676" Offset="0.698" />
                        <GradientStop Color="#00C4C4C4" Offset="1" />
                        <GradientStop Color="#AAFFFFFF" Offset="0.39" />
                        <GradientStop Color="#B5000000" Offset="0.855" />
                    </RadialGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="addDockButton" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <Image x:Name="addDockButtonImage" Source="Images\112_Plus_Grey_48x48_72.png" Stretch="None"/>
                <Button.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#BD767676" Offset="0.698" />
                        <GradientStop Color="#00C4C4C4" Offset="1" />
                        <GradientStop Color="#AAFFFFFF" Offset="0.39" />
                        <GradientStop Color="#B5000000" Offset="0.855" />
                    </RadialGradientBrush>
                </Button.Background>
            </Button>
            <StackPanel Height="68" Name="stackPanel1" Width="121" DockPanel.Dock="Right">
                <Label Content="Thumbnail Size" Height="28" Name="label1" HorizontalContentAlignment="Center" Margin="0,5,0,0" />
                <Slider Height="23" Name="slider1" Width="100" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
